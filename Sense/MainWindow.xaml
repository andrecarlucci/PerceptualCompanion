<Window x:Class="Sense.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Topmost="True"
        Title="MainWindow" 
        WindowStartupLocation="Manual" 
        Left="0" Top="0"
        Loaded="Window_Loaded"
        Height="180" Width="240" ResizeMode="NoResize" Opacity="0.5" WindowStyle="None" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Background="White" 
        Foreground="White" 
        AllowsTransparency="True"
        >
    <Grid>
        <Border BorderThickness="1">
            <StackPanel>
                <Canvas x:Name="HandCanvas" Height="120" Width="160" Background="White">
                </Canvas>
            </StackPanel>
        </Border>
        <tb:TaskbarIcon x:Name="NotifyIcon"
          IconSource="/Assets/blue.ico"
          ToolTipText="Control de World!" />
    </Grid>
</Window>
